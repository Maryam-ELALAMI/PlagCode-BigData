# --- Core infrastructure ---
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_CLIENT_ID=plagcode

REDIS_URL=redis://redis:6379/0

# Postgres connection used by the app/services (compose network hostname = postgres)
POSTGRES_DSN=postgresql://plag:plag@postgres:5432/plagdb

# MinIO (S3-compatible) used to store uploaded source files
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minio
MINIO_SECRET_KEY=change-me
MINIO_BUCKET=plagcode-uploads

# --- App tuning ---
PLAGCODE_TOPK=20
PLAGCODE_THRESHOLD=0.50
PLAGCODE_FINGERPRINT_K=12
PLAGCODE_WINNOW_WINDOW=4
